{
  "type": "object",
  "properties": {
    "singularity": {
      "description": "Singularity framework configuration properties",
      "type": "object",
      "properties": {
        "framework-name": {
          "description": "The framework name to register with Mesos.",
          "type": "string",
          "default": "singularity"
        },
        "dns-suffix": {
          "default": ".marathon.mesos",
          "description": "This value is appended to the framework-name value to form the canonical DNS name for Singularity.",
          "type": "string",
          "pattern": "^(?:\\.[a-z][a-z0-9]*?(?:-[a-z0-9]+)*)+$"
        },
        "host": {
            "description": "The Singularity host.",
            "type": "string",
            "default": "$HOST"
        },
        "port": {
            "description": "The port on which Singularity will be available.",
            "type": "integer",
            "default": 7099
        },
        "ui-base": {
            "description": "Singularity UI base.",
            "type": "string",
            "default": "/singularity"
        },
        "cpus": {
            "description": "CPU shares to allocate.",
            "type": "number",
            "default": 1.0,
            "minimum": 0.1
        },
        "mem": {
            "description": "Memory to allocate.",
            "type": "number",
            "default": 512.0,
            "minimum": 512.0
        },
        "zookeeper": {
            "description": "Host and port of this cluster's zookeeper.",
            "type": "string",
            "default": "leader.mesos:2181"
        },
        "mesos-master": {
            "description": "URI of this cluster's Mesos master.",
            "type": "string",
            "default": "zk://leader.mesos:2181/mesos"
        },
        "max-heap": {
            "description": "Optional maximum heap size.",
            "type": "string",
            "default": "512m"
        },
        "role": {
            "description": "The accepted resource roles (e.g. slave_public). By default, this will deploy to any agents with the * role.",
            "type": "string",
            "default": "*"
        }
      },
      "required": [
        "framework-name",
        "dns-suffix",
        "host",
        "port",
        "ui-base",
        "cpus",
        "mem",
        "zookeeper",
        "mesos-master",
        "max-heap",
        "role"
      ]
    }
  },
  "required": [
    "singularity"
  ]
}
